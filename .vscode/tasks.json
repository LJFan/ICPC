      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-include",
        "imacros.h",
        "-I",
        "/usr/include/boost",
        "${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${relativeFileDirname}/${fileBasenameNoExtension}.s",
        "-O0",
        "-g",
        "-fverbose-asm",
        "-S"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
