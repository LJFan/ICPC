{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "G++: check the syntax of active file",
      "detail": "options: \"-std=c++17 -Wall -Wextra -fsyntax-only\"",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-include",
        "imacros.h",
        "-I",
        "/usr/include/boost",
        "${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
        "-fsyntax-only"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "G++: preprocess active file",
      "detail": "options: \"-std=c++17 -Wall -Wextra -E\"",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-include",
        "imacros.h",
        "-I",
        "/usr/include/boost",
        "-E",
        "${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${relativeFileDirname}/${fileBasenameNoExtension}_pp.cpp"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "G++: build active file",
      "detail": "options: \"-std=c++17 -Wall -Wextra -O2\"",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-include",
        "imacros.h",
        "-O2",
        "-I",
        "/usr/include/boost",
        "${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${relativeFileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "G++: build active file for debugging",
      "detail": "options: \"-std=c++17 -Wall -Wextra -g -ggdb\"",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-include",
        "imacros.h",
        "-I",
        "/usr/include/boost",
        "${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${relativeFileDirname}/${fileBasenameNoExtension}",
        "-g",
        "-ggdb"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
