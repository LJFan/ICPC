      "group": "build"
    },
    {
      "type": "shell",
      "label": "G++: run active file",
      "command": "./run.sh",
      "args": [
        "${relativeFileDirname}/${fileBasenameNoExtension}",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "G++: build & run active file",
      "dependsOrder": "sequence",
      "dependsOn": [
        "G++: build active file",
        "G++: run active file"
      ],
      "group": "test"
    },
    {
      "type": "shell",
      "label": "G++: build active file for debugging to assembly",
      "detail": "options: \"-std=c++17 -Wall -Wextra -O0 -g -fverbose-asm -S\"",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-include",
        "imacros.h",
        "-I",
        "/usr/include/boost",
        "${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${relativeFileDirname}/${fileBasenameNoExtension}.s",
        "-O0",
        "-g",
        "-fverbose-asm",
        "-S"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "presentation": {
        "echo": false,
